{
  "scripts": {
    "dev": "wrangler dev src/index.tsx",
    "deploy": "wrangler deploy --minify src/index.tsx",
    "css": "npx tailwindcss -i ./src/input.css -o ./src/static/output.css",
    "css:watch": "npx tailwindcss -i ./src/input.css -o ./src/static/output.css --watch",
    "format": "npx prettier --write 'src/**/*.{ts,tsx}'",
    "lint": "npx eslint --fix --ext .ts --ext .tsx src",
    "ci": "npx tsc --noEmit && npx prettier --check 'src/**/*.{ts,tsx}' && npx eslint --max-warnings=0 --ext .ts --ext .tsx src"
  },
  "dependencies": {
    "hono": "^3.9.2",
    "path-browserify": "^1.0.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230914.0",
    "@types/path-browserify": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "wrangler": "^3.15.0"
  }
}
