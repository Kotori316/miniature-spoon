{
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "rm -rf dist dist-worker-server && $npm_execpath run build && wrangler dev",
    "deploy": "rm -rf dist dist-worker-server && $npm_execpath run css && $npm_execpath run build && wrangler pages deploy dist --commit-dirty=true --branch=${BRANCH:-main}",
    "format": "npx @biomejs/biome check --write --unsafe",
    "test": "vitest run",
    "ci": "npx @biomejs/biome ci && tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "honox": "^0.1.27",
    "pretty-bytes": "^6.1.1",
    "path-browserify": "^1.0.1",
    "file-metadata": "file:../file-metadata"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.2",
    "@cloudflare/workers-types": "^4.20230914.0",
    "@hono/vite-cloudflare-pages": "^0.4.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.17.0",
    "@types/path-browserify": "^1.0.2",
    "autoprefixer": "^10.4.20",
    "vite": "^6.0.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.15.0"
  },
  "volta": {
    "node": "22.12.0",
    "npm": "10.9.2"
  }
}
