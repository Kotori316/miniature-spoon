{
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy --minify src/index.ts",
    "css": "npx tailwindcss -i ./src/input.css -o ./assets/static/output.css",
    "css:watch": "npx tailwindcss -i ./src/input.css -o ./assets/static/output.css --watch",
    "format": "npx @biomejs/biome check --apply-unsafe ./src ./test",
    "lint": "npx eslint --fix --ext .ts --ext .tsx src test",
    "test": "mkdir -p ./assets/ssg && touch ./assets/ssg/index.html && npx vitest run && npx vitest run -c vitest.production.config.ts",
    "ci": "npx @biomejs/biome ci ./src && tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "path-browserify": "^1.0.1",
    "pretty-bytes": "^6.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.2",
    "@cloudflare/vitest-pool-workers": "^0.2.0",
    "@cloudflare/workers-types": "^4.20230914.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/path-browserify": "^1.0.2",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.4.4",
    "vitest": "^1.0.4",
    "wrangler": "^3.15.0"
  }
}
