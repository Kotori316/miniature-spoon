{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":prHourlyLimitNone",
    ":automergePr",
    ":automergeTesters",
    ":automergeMinor",
    ":disableDependencyDashboard",
    "customManagers:biomeVersions",
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.*\\.tf$",
        "^.*\\.tfvars$"
      ],
      "matchStrings": [
        "=\\s*\"(?<depName>docker\\.io\\/[a-zA-Z0-9\\._-]+?\\/[a-zA-Z0-9\\._-]+?):(?<currentValue>[^\" ]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
        "tflint-plugin",
      ],
      "automerge": true,
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
    },
    {
      "matchPackageNames": ["@cloudflare/workers-types", "wrangler"],
      "schedule": ["* * 1,15 * *"],
    }
  ],
  "platformCommit": "enabled",
}
